<div style="margin:5px; border-radius:4px; background-color:white; padding:10px;" class="card">
  <div class="card-block">
    <div class="row" style="padding-left:30px;padding-right:30px;padding-bottom:15px;padding:15px !important;">
      <div class="col-md-1" style="">
        <%= gravatar_for message.user %>
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted"><%= link_to message.user.name, profile_path(message.user) %> at <%= message.timestamp %> says</span><br>
          <%= message.body %>
        </p>
      </div>
    </div>
  </div>
</div>
